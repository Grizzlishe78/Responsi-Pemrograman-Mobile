<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Responsi1Mobile1D023104"
        android:enableOnBackInvokedCallback="true">

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.HistoryActivity"
            android:exported="false"
            android:label="Club History"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.CoachActivity"
            android:exported="false"
            android:label="Head Coach"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.SquadActivity"
            android:exported="false"
            android:label="Team Squad"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".ui.PlayerDetailActivity"
            android:exported="false"
            android:label="Player Detail"
            android:parentActivityName=".ui.SquadActivity" />
    </application>

</manifest>
